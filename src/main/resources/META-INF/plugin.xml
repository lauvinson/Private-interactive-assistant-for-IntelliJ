  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products -->
  <depends>com.intellij.modules.platform</depends>
  <depends>org.jetbrains.plugins.terminal</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
    <!-- service -->
    <applicationService
            serviceImplementation="com.lauvinson.source.open.assistant.configuration.ConfigService"/>
    <!-- settings panel -->
    <applicationConfigurable instance="com.lauvinson.source.open.assistant.settings.Setting" />
    <!-- tool -->
    <toolWindow id="Assistant" anchor="right" factoryClass="com.lauvinson.source.open.assistant.SearchToolWindowFactory"
                icon="/icons/pluginIcon.svg"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <group id="ability" text="Interactive Assistant" popup="true">
<!--          <action id="Assistant.Main" class="com.lauvinson.source.open.assistant.AssistantAction"-->
<!--                  text="Interactive Assistant" description="Private interactive assistant">-->
<!--              <add-to-group group-id="EditorPopupMenu" anchor="first"/>-->
<!--              <keyboard-shortcut keymap="$default" first-keystroke="alt G"/>-->
<!--          </action>-->

      </group>
      <group id="StudyAction.MyGroup" class="com.lauvinson.source.open.assistant.Group" text="Abilities" icon="/icons/pluginIcon.svg" popup="true">
          <add-to-group group-id="EditorPopupMenu" anchor="first"/>
      </group>
  </actions>

</idea-plugin>