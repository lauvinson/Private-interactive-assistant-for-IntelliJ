<idea-plugin>
  <id>com.lauvinson.open.translation</id>
  <name>YDTranslation for private</name>
  <version>1.0.2</version>
  <vendor email="wincentlauvinson@gmail.com" url="https://www.lauvinson.com">Vinson's OpenSources</vendor>

  <description><![CDATA[
      <strong>划词快捷翻译</strong><br>
      有道翻译私key版，个人key请至有道智云获取<br>
      快捷键◜Alt + G ◞
      <br/>
      <br/>
      @author:vinson(<a href="mailto:wincentlauvinson@gmail.com">wincentlauvinson@gmail.com</a>)
      <hr/>
      more opprtunities in the future
    ]]></description>

  <change-notes><![CDATA[
      😀添加有道翻译公有API接口<br>
      😀添加JSON格式化输出<br>
      😀优化HTTP请求路径
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="YDTranslation.TranslateAction" class="com.lauvinson.open.translation.TranslateAction"
            text="YDTranslate" description="translate for private">
      <add-to-group group-id="EditMenu" anchor="first"/>
      <keyboard-shortcut keymap="$default" first-keystroke="alt G"/>
    </action>
  </actions>

</idea-plugin>